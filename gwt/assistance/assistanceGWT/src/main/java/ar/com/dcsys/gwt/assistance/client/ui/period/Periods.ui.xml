<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.cellview.client"
	xmlns:c="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
		.persons {
			width: 32em;
			height: 30em;
			margin-top:1em;
			margin-bottom:0.5em;
		}
		
		.personData {
			float: left; 
		}

		.filter-panel,.panel{
			margin-top:1em;
			margin-left:1em;
		}
		.label-inline,.input-inline{
			display:inline;
		}

		.label-inline,.label-block{
			color: #47698A;
			font-weight:bold;
		}		

		.input-inline{
			margin-left:1em;
		}	

		.panel-inline{
			display:inline;
			margin-left:1em;
		}

		.date-box{
			width:6em;
			text-align:center;
			margin-left:0.5em;
		}

		.title{
			text-align:center;
			font-weight:bold;
			font-size:large;
			margin-bottom: 1em;
			margin-top: 1em;
			color: #2952a3;
			text-transform:capitalize;
		}


		.subtitle,.subtitle-center{
			text-align:center;
			font-weight:bold;
			margin-bottom: 1em;
			color: #2952a3;
		}
		.subtitle{
			display:inline;
		}

		.subtitle-center{
			text-align:center;
			margin-top:0.5em;
		}

		.block-dates,.person-list,.periods-list {
			margin-left:1em;
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #C1C1C1;
			background-color: #E8EEF7;		
			margin-top:1em;
		}
		.block-dates{
			width:30em;
			padding:1em;
		}
		.person-list,.periods-list {
			float:left;
		}

		.button{
			margin-top:0.5em;
			margin-bottom:0.5em;
			margin-right:0.5em;
			text-align:center;
			color: #47698A;
		}

		.panel-button{
			text-align:center;
			float:left;
			width:100%;
			margin-top:1em;
		}

/*-----------------------------------------------*/
/*---------- LISTADO DE PERSONAS ----------------*/
/*-----------------------------------------------*/

	.content-person-list{
		float:left;
	}		
	
	.panel-filter-count {
		display:inline;
		margin-left:1em;
	}


/*-----------------------------------------------*/
/*------------------ PERIODOS -------------------*/
/*-----------------------------------------------*/
	
	.block-periods{
		float:left;
	}

	.periods {
		width: 100em;
		height: 25em;
	}

	.period-list{
		width: 100em;
		height: 30em;
	}

	.text-area{
		resize:none;
		width:56em;
		height:4em;
	}
	
	
	.period-filter-panel {
		margin-left: 1em;
	}
	
	.group-filter-panel {
		margin-left: 1em;
	}	

	.panel-justify-statics {
		width:100em;
		height:20em;
		float:left;
		margin-left:1em;
		-moz-border-radius: 5px;
		border-radius: 5px;
		border: 1px solid #C1C1C1;
		background-color: #E8EEF7;		
		margin-top:1em;
	}

	.block-justify{	
		width:100%;
		height:100%;
	}

	.statics {
		width:100%;
		height:100%;
	}
	
	.panelFind {
		text-align:center;
	}
	
	</ui:style>
	
	<g:FlowPanel>
		<g:Label styleName="{style.title}" text="Reporte de periodos"/>
		
		<g:FlowPanel styleName="{style.content-person-list}">
			<g:FlowPanel styleName="{style.block-dates}">
			    <g:Label styleName="{style.subtitle}" text="Fechas a buscar" />
				<g:FlowPanel styleName="{style.panel-inline}">
					<g:Label text="Inicio" styleName="{style.label-inline}"/>
					<c:DateBox ui:field="start" styleName="{style.date-box}"/>
				</g:FlowPanel>
				<g:FlowPanel styleName="{style.panel-inline}">
					<g:Label text="Fin" styleName="{style.label-inline}"/>
					<c:DateBox ui:field="end" styleName="{style.date-box}"/>
				</g:FlowPanel>
			</g:FlowPanel>

			<g:FlowPanel styleName="{style.block-dates}">
				<g:FlowPanel>
					<g:Label text="Tipo de reporte" styleName="{style.label-inline}"/>
					<g:ValueListBox ui:field="periodFilter"/>
				</g:FlowPanel>
				
				<g:FlowPanel>
					<g:Label text="Grupo" styleName="{style.label-inline}"/>
					<g:ValueListBox ui:field="groupFilter"/>
				</g:FlowPanel>

				<g:FlowPanel styleName="{style.panelFind}">
					<g:Button ui:field="find" text="Buscar"/>
				</g:FlowPanel>
			</g:FlowPanel>				
	
			<g:FlowPanel styleName="{style.person-list}">
				<g:FlowPanel>
					<g:FlowPanel styleName="{style.filter-panel}">
					    <g:Label text="Buscar:" styleName="{style.label-inline}"/> 
						<g:TextBox ui:field="filter" styleName="{style.input-inline}"/>
						<g:FlowPanel styleName="{style.panel-filter-count}">
						    <g:Label text="Total:" styleName="{style.label-inline}"/> 
							<g:Label ui:field="usersCount" styleName="{style.label-inline}"/>
						</g:FlowPanel>
					</g:FlowPanel>
				</g:FlowPanel>
				<d:DataGrid ui:field="persons" styleName="{style.persons}"/>
			</g:FlowPanel>
		</g:FlowPanel>
		 
		<g:FlowPanel styleName="{style.periods-list}">
			<d:DataGrid ui:field="periods" styleName="{style.periods}"/>
		</g:FlowPanel>
			
 		<g:FlowPanel styleName="{style.panel-justify-statics}">
			<g:TabLayoutPanel ui:field="tabLayoutPanel" barUnit='EM' barHeight='2' height='90%' width='100%'>
				<g:tab>
					<g:header>Estad√≠sticas</g:header>
					<cell:DataGrid ui:field="statistics" styleName="{style.statics}"/>
				</g:tab>
				<g:tab>
					<g:header>Justificar</g:header>
					<g:FlowPanel styleName="{style.block-justify}">
					    <g:Label text="Justificar Periodos" styleName="{style.subtitle-center}"/>
					    <g:FlowPanel styleName="{style.panel}">
					        <g:Label text="Tipo : " styleName="{style.label-inline}"/>
							<g:ValueListBox ui:field="types"/>
						</g:FlowPanel>
						<g:FlowPanel styleName="{style.panel}">	
						    <g:Label text="Notas : " styleName="{style.label-block}"/>
							<g:TextArea ui:field="justifyNotes" styleName="{style.text-area}"/>
						</g:FlowPanel>
						<g:FlowPanel styleName="{style.panel-button}">
							<g:Button ui:field="justify" text="Justificar Seleccionados" styleName="{style.button}"/>
						</g:FlowPanel>
					</g:FlowPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:FlowPanel>

		
	</g:FlowPanel>
	
</ui:UiBinder> 