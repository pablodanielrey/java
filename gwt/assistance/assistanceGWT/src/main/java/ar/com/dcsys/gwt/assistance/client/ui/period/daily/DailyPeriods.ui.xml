<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.cellview.client"
	xmlns:c="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:with field="res" type="ar.com.dcsys.gwt.assistance.client.ui.period.daily.DailyPeriodsViewResources" />


	<g:FlowPanel>
		<g:Label styleName="{res.style.title}" text="Reporte de periodos"/>
		
		
		<g:FlowPanel styleName="{res.style.blockDates}">
			<g:FlowPanel styleName="{res.style.labelInline}">
			    <g:Label styleName="{res.style.subtitle}" text="Fecha" />
				<c:DateBox ui:field="date" styleName="{res.style.dateBox}"/>
			</g:FlowPanel>

			<g:FlowPanel styleName="{res.style.labelInline}">
				<g:Label text="Tipo de reporte" styleName="{res.style.labelInline}"/>
				<g:ValueListBox ui:field="periodFilter"/>
			</g:FlowPanel>
			
			<g:FlowPanel styleName="{res.style.labelInline}">
				<g:Label text="Grupo" styleName="{res.style.labelInline}"/>
				<g:ValueListBox ui:field="groupFilter"/>
			</g:FlowPanel>

			<g:FlowPanel styleName="{res.style.labelInline}">
				<g:Button ui:field="find" text="Buscar"/>
			</g:FlowPanel>
		</g:FlowPanel>
	
		<g:FlowPanel styleName="{res.style.periodsList}">
			<g:FlowPanel>
				<g:FlowPanel styleName="{res.style.filterPanel}">
					<g:Label text="Buscar" styleName="{res.style.inputInline}"/>
					<g:TextBox ui:field="filter" styleName="{res.style.inputInline}"/>
					<g:FlowPanel styleName="{res.style.panelFilterCount}">
					    <g:Label text="Total:" styleName="{res.style.labelInline}"/> 
						<g:Label ui:field="usersCount" styleName="{res.style.labelInline}"/>
					</g:FlowPanel>					
				</g:FlowPanel>
				<d:DataGrid ui:field="periods" styleName="{res.style.periods}"/>
			</g:FlowPanel>
		</g:FlowPanel>

		
	</g:FlowPanel>


</ui:UiBinder> 