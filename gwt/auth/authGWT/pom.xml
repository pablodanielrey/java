              <artifact>ar.com.dcsys.gwt.utils:webSocketGWT</artifact>

              <artifact>ar.com.dcsys.gwt.auth:authModelGWT</artifact>
          </compileSourcesArtifacts>

          <logLevel>INFO</logLevel>


        </configuration>
