<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.filters {
			width:500px;
			height:400px;
		}

		.label-inline{
			font-weight: bold;
			display:inline;
			margin-right:0.5em;
			font-weight: bold;
		}

		.input-inline{
			width: 15em;
			background-color: #FFF;
			text-align:center;
			display: inline;
			margin-left:1em;
		}
		
		.commit {
			display:inline;
			cursor: pointer;
			font-weight: bold;			
			margin-left:1em;
		}

		.commit:hover {
			color: white;
			background-color: black;
		}		
		
	</ui:style>
	<g:FlowPanel>
	    <g:FlowPanel>
	        <g:Label text="Filtro:" styleName="{style.label-inline}"/>
	        <g:ValueListBox ui:field="filterType" styleName="{style.input-inline}"/>
	        <g:Label text="AÃ±adir Filtro" ui:field="addFilter" styleName="{style.commit}"/>
	    </g:FlowPanel>
	    <g:FlowPanel>
	        <c:DataGrid ui:field="filters" styleName="{style.filters}"/>
	    </g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 