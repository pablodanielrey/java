<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.text {
			font-size: large;
			color: #2952a3;
			text-align: center;
		}

		.content-panel {
			background-color: white;
			margin: 2em;
		}		

		.botonera{
			text-align:center;
			float:left;
			width:100%;
		}

		.boton{
			margin-top:0.5em;
			margin-bottom:0.5em;
			margin-right:0.5em;
			text-align:center;
			color: #47698A;
		}
	</ui:style>
	<g:SimplePanel>
		<g:DialogBox ui:field="dialog" modal="true" visible="false">
			<g:FlowPanel styleName="{style.content-panel}">
		    	<g:Label ui:field="text" styleName="{style.text}"/>
		    	<g:FlowPanel styleName="{style.botonera}">
		    		<g:Button ui:field="close" text="Cerrar" styleName="{style.boton}"/>
		    	</g:FlowPanel>
			</g:FlowPanel>
		</g:DialogBox>
	</g:SimplePanel>	
</ui:UiBinder> 