<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
			
		.membersView {
			float:left;
			margin:1em;
		}

		.outPersonsView {
			float:left;
			margin:1em;
		}

		.actionsPanel {
			float:left;
			margin-top: 150px;
		}
		
		.button {
			margin: 0.5em;
			display:block;
			width: 10em;
			color: #47698a;			
		}

	</ui:style>
	
	<g:FlowPanel>
	   <g:FlowPanel ui:field="membersView" styleName="{style.membersView}"/>
	   <g:FlowPanel styleName="{style.actionsPanel}">
	       <g:Button text="Agregar al Grupo" ui:field="add" styleName="{style.button}"/>
	       <g:Button text="Eliminar del Grupo" ui:field="remove" styleName="{style.button}"/>
	   </g:FlowPanel>
	   <g:FlowPanel ui:field="outPersonsView" styleName="{style.outPersonsView}"/> 	   
	</g:FlowPanel>
</ui:UiBinder> 