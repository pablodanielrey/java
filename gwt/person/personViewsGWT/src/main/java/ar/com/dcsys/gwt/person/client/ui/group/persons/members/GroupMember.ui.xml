<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:d="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="res" type="ar.com.dcsys.gwt.person.client.ui.group.persons.members.GroupMemberViewResources"/>
	
	<g:FlowPanel styleName="{res.style.memberPanel}">
		
		<g:FlowPanel styleName="{res.style.filterPanel}">
		    <g:Label text="Buscar:" styleName="{res.style.filterLabel}"/> 
			<g:TextBox ui:field="filterPerson" styleName="{res.style.filter}"/>
			
			<g:FlowPanel styleName="{res.style.filterCountPanel}">
	    		<g:Label text="Total:" styleName="{res.style.filterCountLabel}"/> 
				<g:Label ui:field="count" styleName="{res.style.filterCount}"/>
			</g:FlowPanel>
		</g:FlowPanel>
		
		<d:DataGrid ui:field="persons" styleName="{res.style.persons}"/>
		
	</g:FlowPanel>	
	
</ui:UiBinder> 