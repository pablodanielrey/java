<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
		.page {}
		
		.title{
			text-align:center;
			font-weight:bold;
			font-size:large;
			margin-bottom: 0.5em;
			margin-top: 0.25em;
			color: #2952a3;
			text-transform:capitalize;
		}		

		.subtitle-center{	
			text-align:center;
			margin-top:0.5em;
			margin-bottom:0.5em;
			color: #47698A;
			font-weight: bold;
		}	

		.filter-panel,.panel,.panel-inline {
			margin-top:1em;
			margin-left:1em;
		}	

		.panel-filter-count {
			display:inline;
			margin-left:1em;
		}

		.label-inline,.input-inline,.panel-inline {
			display:inline;
		}

		.label-inline {
			color: #47698A;
			font-weight:bold;
		}		

		.input-inline {
			margin-left:1em;
		}	

		.panel-button{
			text-align:center;
			float:left;
			width:100%;
			margin-top:1em;
		}
	
		.button{
			margin-top:0.5em;
			margin-bottom:0.5em;
			margin-right:0.5em;
			text-align:center;
			color: #47698A;
		}


	/*----------------------------------------------------*/
	/*--------------- Listado de Grupos ------------------*/
	/*----------------------------------------------------*/
		.block-group-list {
			float:left;
			margin-left:1em;
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #C1C1C1;
			background-color: #E8EEF7;		
			margin-top:1em;
			width:25em;
			height:40em;
		}

		.groups {
			width:100%;
			height: 30em;
			margin-top:1em;
			margin-bottom:0.5em;
		}

	/*----------------------------------------------------*/
	/*--------------- Datos del Grupo --------------------*/
	/*----------------------------------------------------*/

		.block-info-group {
			float:left;
			margin-left:1em;	
			margin-top:1em;
			width: 65em;
			height: 38em;	
		}

		.panel-info-group {
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #C1C1C1;
			background-color: #E8EEF7;		
			margin-top:1em;	
			width:100%;		
			float:left;
		}

		.types-inline {
			margin-top:1em;
			margin-left:1em;
			height:2em;
			display:inline;
		}

		.block-group-person-list {
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #C1C1C1;
			background-color: #E8EEF7;	
			width:100%;	
			float:left;		
			padding-bottom:1em;
		}

		/* ------ Integrantes del grupo ------- */

		.block-personIn-list {
			float:left;
			margin-left:1em;
			margin-top:1em;
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #C1C1C1;
			background-color: #E8EEF7;	
			width:25em;
		}

		.personsIn {
			width:100%;
			height: 17.5em;
			margin-top:1em;
			margin-bottom:0.5em;
		}

		/* ------ No Integrantes del grupo ------- */

		.block-personOut-list {
			float:left;
			margin-left:1em;
			margin-top:1em;
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #C1C1C1;
			background-color: #E8EEF7;		
			width:35em;
		}

		.personsOut {
			width:100%;
			height: 15em;
			margin-top:1em;
			margin-bottom:0.5em;
		}
		
		.types {
			margin:0.5em;
			height:2em;
		}

	</ui:style>
	
	<g:FlowPanel styleName="{style.page}">
		<g:Label text="Editar Grupos" ui:field="title" styleName="{style.title}"/>
	<!-- *********************************************** -->
	<!-- ********** Listado de Grupos ****************** -->
	<!-- *********************************************** -->
		<g:FlowPanel styleName="{style.block-group-list}">
			<g:FlowPanel>
				<g:FlowPanel styleName="{style.filter-panel}">
				    <g:Label text="Buscar:" styleName="{style.label-inline}"/> 
					<g:TextBox ui:field="filterGroup" styleName="{style.input-inline}"/>
					<g:FlowPanel styleName="{style.panel-filter-count}">
					    <g:Label text="Total:" styleName="{style.label-inline}"/> 
						<g:Label ui:field="groupsCount" styleName="{style.label-inline}"/>
					</g:FlowPanel>
				</g:FlowPanel>
				<g:FlowPanel styleName="{style.filter-panel}">
					<g:Label text="Filtrar por:" styleName="{style.label-inline}"/>
					<g:ValueListBox ui:field="groupTypes" styleName="style.input-inline"/>
				</g:FlowPanel>
			</g:FlowPanel>
			<d:DataGrid ui:field="groups" styleName="{style.groups}"/>
		</g:FlowPanel>	
		
		
	<!-- *********************************************** -->
	<!-- ********** InformaciÃ³n del Grupo ************** -->
	<!-- *********************************************** -->		
		<g:FlowPanel styleName="{style.block-info-group}">							
						
			<g:FlowPanel styleName="{style.block-group-person-list}">
			    <g:Label text="Integrantes del Grupo" styleName="{style.subtitle-center}"/>

			    <!-- ******* Integrantes del grupo ************ -->
				<g:FlowPanel styleName="{style.block-personIn-list}">
					<g:FlowPanel>
						<g:FlowPanel styleName="{style.filter-panel}">
						    <g:Label text="Buscar:" styleName="{style.label-inline}"/> 
							<g:TextBox ui:field="filterPersonIn" styleName="{style.input-inline}"/>
							<g:FlowPanel styleName="{style.panel-filter-count}">
					    		<g:Label text="Total:" styleName="{style.label-inline}"/> 
								<g:Label ui:field="inCount" styleName="{style.label-inline}"/>
							</g:FlowPanel>
						</g:FlowPanel>
					</g:FlowPanel>
					<d:DataGrid ui:field="personsIn" styleName="{style.personsIn}"/>
				</g:FlowPanel>			
				    
				<!-- ******* No Integrantes del grupo ************ -->
				<g:FlowPanel styleName="{style.block-personOut-list}">
					<g:FlowPanel>
						<g:FlowPanel styleName="{style.filter-panel}">
						    <g:Label text="Buscar:" styleName="{style.label-inline}"/> 
							<g:TextBox ui:field="filterPersonOut" styleName="{style.input-inline}"/>						
							<g:FlowPanel styleName="{style.panel-filter-count}">
					    		<g:Label text="Total:" styleName="{style.label-inline}"/> 
								<g:Label ui:field="outCount" styleName="{style.label-inline}"/>
							</g:FlowPanel>
						</g:FlowPanel>
						<g:FlowPanel styleName="{style.types}" ui:field="personTypes"/>
					</g:FlowPanel>
					<d:DataGrid ui:field="personsOut" styleName="{style.personsOut}"/>
				</g:FlowPanel>				
			</g:FlowPanel>
			
			
			<!-- Modificar/Crear Grupo -->
			<g:FlowPanel styleName="{style.panel-info-group}">
				<g:Label text="Datos del Grupo" styleName="{style.subtitle-center}"/>
			    <g:FlowPanel styleName="{style.panel-inline}">
					<g:Label text="Nombre:" styleName="{style.label-inline}"/>
					<g:TextBox ui:field="name" styleName="{style.input-inline}"/>
				</g:FlowPanel>
				<g:FlowPanel styleName="{style.panel-inline}">
					<g:Label text="E-Mail:" styleName="{style.label-inline}"/>
					<g:TextBox ui:field="mail" styleName="style.input-inline"/>
				</g:FlowPanel>
				<g:FlowPanel styleName="{style.panel-inline}">
					<g:Label text="Depende de:" styleName="{style.label-inline}"/>
					<g:ValueListBox ui:field="groupParent" styleName="style.input-inline"/>
				</g:FlowPanel>
				<g:FlowPanel styleName="{style.panel}">
				    <g:Label text="Tipo:" styleName="{style.label-inline}"/>
					<g:FlowPanel styleName="{style.types-inline}" ui:field="types"/>
				</g:FlowPanel>	
			
				<g:FlowPanel styleName="{style.panel-button}">			
					<g:Button ui:field="commit" text="Guardar" styleName="{style.button}"/>
				</g:FlowPanel>		
			</g:FlowPanel>
		
		</g:FlowPanel>
		
	</g:FlowPanel>
</ui:UiBinder> 