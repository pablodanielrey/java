<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:pt="urn:import:ar.com.dcsys.gwt.person.client.ui.types">
	
	<ui:with field="res" type="ar.com.dcsys.gwt.person.client.ui.basicData.PersonDataViewResources"/>
	
    <g:FlowPanel>

        <g:FlowPanel>
   			<g:Label text="Información Personal" styleName="{res.style.title}"/>
		    <g:CaptionPanel captionText="Datos Personales">
		   	    <g:FlowPanel styleName="{res.style.personDataPanel}">
		   	        <g:FlowPanel styleName="{res.style.namePanel}">
		 				<g:Label styleName="{res.style.nameLabel}" text="Nombre:"/>
						<g:TextBox styleName="{res.style.name}" ui:field="name"/>
		   	        </g:FlowPanel>
		   	        <g:FlowPanel styleName="{res.style.lastNamePanel}">
		  					<g:Label styleName="{res.style.lastNameLabel}" text="Apellido:"/>
		  					<g:TextBox styleName="{res.style.lastName}" ui:field="lastName"/>
		   	        </g:FlowPanel>
		   	        <g:FlowPanel styleName="{res.style.dniPanel}">
		   	            <g:Label styleName="{res.style.dniLabel}" text="DNI:"/>
		   	            <g:TextBox styleName="{res.style.dni}" ui:field="dni"/>
		   	        </g:FlowPanel>
		   	        <g:FlowPanel styleName="{res.style.telephonePanel}">
		   	            <g:Label styleName="{res.style.telephoneLabel}" text="Telefono:"/>
		   	            <g:TextBox styleName="{res.style.telephone}" ui:field="telephone"/>
		   	        </g:FlowPanel>
		   	        <g:FlowPanel styleName="{res.style.addressPanel}">
		   	            <g:Label styleName="{res.style.addressLabel}" text="Dirección:"/>
		   	            <g:TextBox styleName="{res.style.address}" ui:field="address"/>
		   	        </g:FlowPanel>
		   	        <g:FlowPanel styleName="{res.style.cityPanel}">
		   	            <g:Label styleName="{res.style.cityLabel}" text="Ciudad:"/>
		   	            <g:TextBox styleName="{res.style.city}" ui:field="city"/>
		   	        </g:FlowPanel>
		   	        <g:FlowPanel styleName="{res.style.countryPanel}">
		   	            <g:Label styleName="{res.style.countryLabel}" text="País:"/>
		   	            <g:TextBox styleName="{res.style.country}" ui:field="country"/>
		   	        </g:FlowPanel>
		   	        
		   	        <g:FlowPanel styleName="{res.style.genderPanel}">
		   	            <g:Label styleName="{res.style.genderLabel}" text="Género:"/>
		   	            <g:RadioButton styleName="{res.style.gender}" ui:field="masculineGender"/>
		   	            <g:RadioButton styleName="{res.style.gender}" ui:field="femenineGender"/>
		   	        </g:FlowPanel>
		   	        
		   	        <pt:PersonTypesView ui:field="personTypes"/>
	
		   	        <g:FlowPanel styleName="{res.style.studentDataPanel}" ui:field="studentData">
		   	            <g:Label styleName="{res.style.studentNumberLabel}" text="Legajo:"/>
		   	        	<g:TextBox styleName="{res.style.studentNumber}" ui:field="studentNumber"/>
		   	        </g:FlowPanel>
		   	        
		   	        <g:FlowPanel ui:field="mailData" styleName="{res.style.mailPanel}">
		   	            <g:Label styleName="{res.style.mailLabel}" text="Correo :"/>
		   	            <g:TextBox styleName="{res.style.mail}" ui:field="mail"/>
		   	        </g:FlowPanel>
		   	        
			    </g:FlowPanel>
		    </g:CaptionPanel>
	    </g:FlowPanel>

	</g:FlowPanel>
	
</ui:UiBinder> 